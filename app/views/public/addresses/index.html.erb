<div class="container">
<div class="row">
<%= form_with model: @address, url:"/addresses", local:true do |f| %>
 <table class="table table-hover">
  <h2>配送先登録/一覧</h2>
  <thead>

    <tr>
      <th> 郵便番号(ハイフンなし) <%= f.text_field :post_code %></th>
    </tr>

    <tr>
      <th> 住所 <%= f.text_field :address, size: 40 %></th>
    </tr>

   <tr>
      <th> 宛名 <%= f.text_field :name %></th>
      <th><%= f.submit "新規登録", class:'btn btn-success' %></th>
   </tr>
   </thead>
 </table>
<% end %>

  <table class='table table-bordered'>
    <tbody>
      <tr>
      <td>郵便番号</td>
      <td>住所</td>
      <td>宛名</td>
      <td></td>
      </tr>


    <% @addresses.each do |addresses| %>
    <tr>
      <td><%= addresses.post_code %></td>
      <td><%= addresses.address %></td>
      <td><%= addresses.name %></td>
      <td><%= link_to "編集する", edit_address_path(addresses.id), class: "btn btn-success" %></td>
      <td><%= link_to "削除する", addresses_path(addresses.id), method: :delete, class:'btn btn-danger' %></td>
    </tr>
   </tbody>
   <% end %>
  </table>
</div>
</div>