<div class='container'>
<h4 class="table-secondary d-inline-flex pr-5 pl-5 mt-4 ml-3">配送先登録/一覧</h4>
<div class='row mt-3'>
<div class="col px-sm-3">
<%= form_with model: @address, url:"/addresses", local:true do |f| %>
 <table class="table table-borderless">
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <td><%= f.text_field :post_code %></td>
    </tr>

    <tr>
      <th>住所</th>
      <td><%= f.text_field :address, size: 60 %></td>
    </tr>

   <tr>
      <th>宛名</th>
      <td><%= f.text_field :name %></td>
      <th><%= f.submit "新規登録", class:'btn btn-success' %></th>
   </tr>
 </table>
<% end %>

  <div class="col-sm-8 px-sm-0 mt-5">
  <table class="table table-bordered">
      <tr class="table-secondary">
      <td><strong>郵便番号</strong></td>
      <td><strong>住所</strong></td>
      <td><strong>宛名</strong></td>
      <td></td>
      </tr>
    <% @addresses.each do |addresses| %>
    <tr>
      <td><%= addresses.post_code %></td>
      <td><%= addresses.address %></td>
      <td><%= addresses.name %></td>
       <td><%= link_to "編集する", edit_address_path(addresses.id), class: "btn btn-success" %>
       <%= link_to "削除する", address_path(addresses.id), method: :delete, class:'btn btn-danger' %></td>
    </tr>
   <% end %>
  </table>
</div>
</div>
</div>
</div>