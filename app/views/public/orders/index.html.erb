<h2>注文履歴一覧</h2>

<div class="container">
<div class="row">
<div class="col">
<table class="table">

  <thead class="text-center">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>


  <tbody>
    <% @orders .each do |order| %>
    <tr>
      <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
      <th><%= order.address %></th>
      <th><%= order.id %></th>
      <th><%= order.total_payment %></th>
      <th><%= order.status %></th>
      <th><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></th>
    </tbody>
  <% end %>
</table>
</div>
</div>
</div>



