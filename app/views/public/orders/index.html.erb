<div class="container">
<h4 class="table-secondary d-inline-flex pl-5 pr-5 m-4 ml-5">注文履歴一覧</h4>
<div class='row mx-5'>
<div class="col-12 px-sm-0 offset-sm-0">
<table class="table table-bordered">

  <tbody>
    <tr class="table-secondary">
      <td class="text-center"><strong>注文日</strong></td>
      <td class="text-center"><strong>配送先</strong></td>
      <td class="text-center"><strong>注文商品</strong></td>
      <td class="text-center"><strong>支払金額</strong></td>
      <td class="text-center"><strong>ステータス</strong></td>
      <td class="text-center"><strong>注文詳細</strong></td>
    </tr>

    <% @orders.each do |order| %>
    <tr class="text-center">
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.address %></td>
      <td><%  order.order_items.each do |order_item| %>
          <%= order_item.item.name %>
          <% end %>
      </td>
      <td><%= order.total_payment %></td>
      <td><%= order.status_i18n %></td>
      <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>
</div>




