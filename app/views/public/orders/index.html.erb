<div class="container">
<div class='row mt-5'>
<div class="col-12 px-sm-0 offset-sm-0">
<table class="table table-bordered">

<h3>注文履歴一覧</h3>

  <tbody>
    <tr class="table-secondary">
      <td class="text-center">注文日</td>
      <td class="text-center">配送先</td>
      <td class="text-center">注文商品</td>
      <td class="text-center">支払金額</td>
      <td class="text-center">ステータス</td>
      <td class="text-center">注文詳細</td>
    </tr>

    <% @orders.each do |order| %>
    <tr class="text-center">
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.address %></td>
      <td><%  order.order_items.each do |order_item| %>
          <%= order_item.item.name %>
          <% end %>
      </td>
      <td><%= order.total_payment %></td>
      <td><%= order.status_i18n %></td>
      <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>
</div>



