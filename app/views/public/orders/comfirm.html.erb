<div class="container">
<div class="row"><h2>注文情報確認</h2></div>

<table>
    <tr>
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
    </tr>
    <% total = 0 %>
    <% @cart_items.each do |cart_item| %>
    <tr>
        <td><%= image_tag cart_item.item.get_image, size: "100x100" %><%= cart_item.item.name %></td>
        <td><%= cart_item.item.name %></td>
　　　　 </td>
          <td><%= (cart_item.price).to_i %></td>
          <td><%= cart_item.quantity %></td>
          
         </tr>
         
     <% end %>
</table>

<table>
     <tr>
       <th>送料</th>
        <% @order.shipping_fee = 800 %>
       <td><%= @order.shipping_fee %></td>
      </tr>
     <tr>
       <th>商品合計</th>
       <td><%= total.to_i %></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <% @order.total_payment = @order.shipping_fee + total.to_i %>
        <td><%= @order.total_payment %></td>
      </tr>
</table>
    
</div>