<div class="container">
<div class="row mb-3"><h2>注文情報確認</h2></div>


<div class="row">
<div class='col-7 offset-1'>
  <table class='table table-bordered'>
    <tr>
        <td>商品名</td>
        <td>単価(税込)</td>
        <td>数量</td>
        <td>小計</td>
    </tr>
    <% total = 0 %>
    <% @cart_items.each do |cart_item| %>
    <tr>
        <td><%= image_tag cart_item.item.get_image, size: "70x70" %><%= cart_item.item.name %></td>
            <%= cart_item.item.name %>
　　　　 </td>
          <td><%= cart_item.item.add_tax_sales_price %></td>
          <td><%= cart_item.quantity %></td>

          <td>
        　<%= cart_item.sum_of_price %>
          </td>
         </tr>
        <% total += (cart_item.sum_of_price*cart_item.quantity) %>
     <% end %>
</table>
</div>
 <div class="col-3">
    <table class="table table-bordered">
        <tr>
        <th>送料</th>
        <% @order.shipping_fee = 800 %>
        <td><%= @order.shipping_fee %></td>
        </tr>
        <tr>
        <th>商品合計</th>
        <td><%= @total.round.to_i %></td>
        </tr>
        <tr>
          <th>請求金額</th>
          <% @order.total_payment = @order.shipping_fee + @total.round.to_i %>
           <td><%= @order.total_payment %></td>
        </tr>
    </table>
 </div>
</div>

    <div class="row">
        <div class='col-11 offset-1'>
            <table class="table table-borderless">
                <tr><th class="col-1">支払い方法</th><td class="col-10"><%= @order.payment_method %></td></tr>
                <tr><th class="col-1">お届け先</th><td class="col-10">
                <%= @order.post_code %>
                <%= @order.address %>
                <%= @order.name %>
                </td></tr>
            </table>
        </div>
    </div>
  <div class="row justify-content-center">
        <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
            <%= f.hidden_field :shipping_fee %>
            <%= f.hidden_field :total_payment %>
            <%= f.hidden_field :payment_method %>
            <%= f.hidden_field :name %>
            <%= f.hidden_field :address %>
            <%= f.hidden_field :post_code %>
            <%= f.hidden_field :status %>
            <%= f.submit "注文を確定する", class: "btn btn-success" %>
        <% end %>
  </div>
</div>