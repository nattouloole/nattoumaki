<h2>注文履歴詳細</h2>
 <div class="container">
  <div class="row">
   <div class="col">
    <table class="table table-hover table-inverse">
  
    <thead>
      <tr>
        <th>注文情報</th>
      </tr>
    </thead>
    
    <tbody>
      <tr>
        <td>注文日<%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
        
      <tr>
        <td>配送先<%= @order.address %></td>
      </tr>
      
      <tr>
        <td>支払方法 <%= @order.payment_method %></td>
      </tr>
      
      <tr>
        <td>ステータス <%= @order.status %></td>   
      </tr>
    </tbody>
    </table>
    
    <table class="table">
      
      <thead>
        <tr>
          <th>注文内容</th>
        </tr>
      </thead>
    
      <tbody>
    　  <tr>
        <td>商品</td>
         <td>単価（税込み）</td>
         <td>個数</td>
        <td>小計</td>
    　  </tr>
      </tbody>
      
      <tbody>
        <% @order_items, each do |order| %>
        <tr>
          <td><%= order.item.name %></td>
            <td><%= order.price %></td>
            <td><%= order.quantity %></td>
          <td><%= order.subtotal %></td>
        </tr>
      </tbody>
    </table>
    
    <table class="table">
      <thead>
        <tr>
          <th>請求情報</th>
        </tr>
      </thead>
      
      <tbody>
        <tr>
          <td>商品合計 <%= @total %></td>
        </tr>
        
        <tr>
          <td>配送料 <%= @shipping_fee %></td>
        </tr>
        
        <tr>
          <td>ご請求額 <%= @totals + @shipping_fee %></td>
        </tr>
      </tbody>
    </div>
   </div>
  </table>
    
  