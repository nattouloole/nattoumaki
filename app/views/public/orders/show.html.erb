<div class="container">
  <h2>注文履歴詳細</h2>
  <div class="row">
   <div class="col">
    <p>
     <strong>注文情報</strong>
    </p>
    <table class="table table-bordered">

    <tbody>
      <tr>
        <td class="table-secondary">注文日</td>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>

      <tr>
        <td class="table-secondary">配送先</td>
        <td><%= @order.customer.address %></td>
      </tr>

      <tr>
        <td class="table-secondary">支払方法</td>
        <td><%= @order.payment_method %></td>
      </tr>

      <tr>
        <td class="table-secondary">ステータス</td>
        <td><%= @order.status_i18n %></td>
      </tr>
    </tbody>
    </table>

    <P>
     <strong>注文内容</strong>
    </P>
    <table class="table table-bordered">
      <tbody>
    　 <tr class="table-secondary">
        <td>商品</td>
         <td>単価(税込み)</td>
         <td>個数</td>
        <td>小計</td>
    　  </tr>
      </tbody>

      <tbody>
        <% @order_items.each do |order| %>
        <tr>
          <td><%= order.item.name %></td>
            <td><%= order.price %></td>
            <td><%= order.quantity %></td>
          <td><%= order.subtotal %></td>
        </tr>
      </tbody>
     <% end %>
    </table>
    </div>

    <div class="col-5 ml-5">
    <p>
      <strong>請求情報</strong>
    </p>
    <table class="table table-bordered">

      <tbody>
        <tr>
          <td class="table-secondary">商品合計</td>
          <td><%= @order.total_price %></td>
        </tr>

        <tr>
          <td class="table-secondary">配送料</td>
          <td><%= @shipping_fee %></td>
        </tr>

        <tr>
          <td class="table-secondary">合計金額</td>
          <td><%= @order.total_price + @shipping_fee %></td>
        </tr>
      </tbody>
     </div>
    </div>
   </div>
  </table>

