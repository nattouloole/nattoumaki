<div class='container'>
 <div class='row mt-3'>
  <div class="col-sm-9 px-sm-0 offset-sm-1">
   <h2>新規会員登録</h2>
   <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :'お名前', class: 'text-right'%>
      (姓)<%= f.text_field :first_name, autofocus: true, class: "name", size: 23 %>
      　(名)<%= f.text_field :last_name, autofocus: true, class: "name", size: 23 %>
    </div>

    <div class="field">
      <%= f.label :'フリガナ'%>
      (セイ)<%= f.text_field :first_name_kana, autofocus: true, class: "name", size: 23 %>
      　(メイ)<%= f.text_field :last_name_kana, autofocus: true, class: "name", size: 23 %>
    </div>

    <div class="field">
      <%= f.label :'メースアドレス' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 23 %>
    </div>

    <div class="field">
      <%= f.label :'郵便番号(ハイフンなし)' %>
      <%= f.text_field :post_code, autofocus: true, autocomplete: "post_code", size: 23 %>
    </div>

    <div class="field">
      <%= f.label :'住所' %>
      <%= f.text_field :address, autofocus: true, autocomplete: "address", size: 50 %>
    </div>

    <div class="field">
      <%= f.label :'電話番号(ハイフンなし)' %>
      <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", size: 23 %>
    </div>

    <div class="field">
      <%= f.label :'パスワード' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", size: 23 %>
    </div>

    <div class="field">
      <%= f.label :'パスワード(確認用)' %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 23 %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class:'btn btn-success' %>
    </div>
   <% end %>
  </div>
 </div>
</div>

<div class='container'>
  <div class='row'>
    <div class="col-sm-4 px-sm-0 offset-sm-1">
      <p><%= render "public/shared/links" %></p>
    </div>
  </div>
</div>
