<h2>ショッピングカート</h2>
<div class = "text-left">
  <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class:"btn btn-danger" %>
</div>

<table class="table-bordered">

  <tr>
    <th>商品名</th>
    <th>単価(税込み)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>

  <% @cart_items.each do |cart_item| %>
  <tr>
    <th><%=image_tag cart_item.item.get_image, size: "100x100" %><%= cart_item.item.name %></th>
    <th><%= cart_item.item.add_tax_sales_price %></th>
    <th>

      <%= form_with model: cart_item, url:cart_item_path(cart_item.id), local:true do |f| %>
       <%= f.select :quantity, *[1..10] %>

       <%= f.submit "変更", class:"btn btn-success" %>
      <% end %>
    </th>
    <th><%= cart_item.sum_of_price %></th>
    <th><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class:"btn btn-danger" %></th>
  </tr>
  <% end %>
</table>

<table>
  <tr>
    <th>合計金額</th>
    <th><%= @total.round.to_s(:delimited) %></th>
  </tr>
</table>

<div>
  <%= link_to "買い物を続ける", items_path, class:"btn btn-primary" %>
</div>

<div>
  <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
</div>