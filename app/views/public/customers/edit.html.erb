<h2>会員情報編集</h2>

<%= form_with model: @customer, url:customers_information_path(@customer), local:true do |f| %>
<table class="table">

   <tr>
    <th>氏名</th>
    <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
  </tr>


  <tr>
    <th>フリガナ</th>
    <th><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></th>
  </tr>

  <tr>
    <th>郵便番号</th>
    <th><%= f.text_field :post_code %></th>
  </tr>

  <tr>
    <th>住所</th>
    <th><%= f.text_field :address %></th>
  </tr>

  <tr>
    <th>電話番号</th>
    <th><%= f.text_field :phone_number %><th>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <th><%= f.text_field :email %></th>
  </tr>

  <tr>
    <td><%= f.submit "編集内容を保存", class:"btn btn-success" %></td>
    <td><%= link_to "退会する", customers_check_path, class:"btn btn-danger" %></td>
  <tr>
<% end %>    
</table>  
