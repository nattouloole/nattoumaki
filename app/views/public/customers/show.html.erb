<h2>マイページ</h2>

<div>登録情報<%= link_to "編集する", customers_information_edit_path(current_customer), class: "btn btn-success" %></th></div>

<table class="table-bordered">
  
  <tr>
    <th>氏名</th>
    <td><%= @customer.last_name %> <%= @customer.first_name %></td>
  </tr>

  <tr>
    <th>カナ</th>
    <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
  </tr>

  <tr>
    <th>郵便番号</th>
    <td><%= @customer.post_code %><td>
  </tr>

  <tr>
    <th>住所</th>
    <td><%= @customer.address %><td>
  </tr>

  <tr>
    <th>電話番号</th>
    <td><%= @customer.phone_number %><td>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>

<div>配送先<%= link_to "一覧を見る", addresses_, class: "btn btn-primary" %></div>
<div>注文履歴<%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></div>