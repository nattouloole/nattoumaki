<div class="container">
  <div class="row">
    <div class="col-xs-1"></div>
    <div class="col-xs-9">
     <h1>注文履歴一覧</h1>
      <table class="table">
       <tr>
        <th class="col-xs-4">購入日時</th>
        <th class="col-xs-4">購入者</th>
        <th class="col-xs-4">注文個数</th>
        <th class="col-xs-4">注文ステータス</th>
       </tr>

       <% @orders.each do |order| %>
       <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
        <td><%= order.customer.full_name %></td>
        <td><%= order.order_items.sum(:quantity) %></td>
        <td><%= order.status %></td>
      </tr>
     <% end %>
    </table>
   <%= paginate @orders %>
    </div>
    <div class="col-xs-2"></div>
  </div>
</div>