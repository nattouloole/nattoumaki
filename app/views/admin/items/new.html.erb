<h2>商品新規登録</h2>

<%= form_with model: @item, url:admin_items_path, local:true do |f| %>
<table class="table">

   <tr>
    <th>商品画像</th>
    <th><%= f.file_field :image %></th>
  </tr>


  <tr>
    <th>商品名</th>
    <th><%= f.text_field :name %></th>
  </tr>

  <tr>
    <th>商品説明</th>
    <th><%= f.text_area :explanation %></th>
  </tr>

  <tr>
    <th>ジャンル</th>
    <th><%= f.collection_select(:genre_id, @genres, :id, :name) %></th>
  </tr>

  <tr>
    <th>税抜価格</th>
    <th><%= f.text_field :without_tax_price %>円<th>
  </tr>

  <tr>
    <th>販売ステータス</th>
    <th><%= f.select :is_sale, [["販売中",true],["販売停止中",false]] %></th>
  </tr>
</table>

<div class="text-center">
  <%= f.submit "新規登録",class: "btn btn-success" %>
</div>
  <% end %>