<h2>商品詳細</h2>

<table class="table">
  <tr>
    <td><%=image_tag @item.image.variant(resize: "100x100^") %></td>
  </tr>
  
  <tr>
    <th>商品名</th>
    <td><%= @item.name %></td>
  </tr>

  <tr>
    <th>商品説明</th>
    <td><%= @item.explanation %></td>
  </tr>

  <tr>
    <th>ジャンル</th>
    <td><%= @item.genre.name %><td>
  </tr>

  <tr>
    <th>税込価格(税抜価格)</th>
    <td><%= @item.add_tax_sales_price.to_s(:dalimited) %>(<%= @item.without_tax_price %>)円<td>
  </tr>

  <tr>
    <th>販売ステータス</th>
    <td><%= @item.is_sale ? "販売中" : "販売停止中" %></td>
  </tr>
</table>

<div class="text-center">
  <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
</div>