<h2>注文履歴詳細</h2>

<table class="table">
  <tr>
    <th>購入者</th>
    <td><%= link_to @customer.name, admin_customer_path(current_customer) %></td>
  </tr>

  <tr>
    <th>注文日</th>
    <td><%= @customer.created_at.strftime('%Y/%m/%d') %></td>
  </tr>

  <tr>
    <th>配送先</th>
    <td><%= @customer.address %><td>
  </tr>

  <tr>
    <th>支払い方法</th>
    <td><%= %><td>
  </tr>
  
  <tr>
    <th>注文ステータス</th>
    <td><%= %><td>
    <th><%= f.submit "更新",class: "btn btn-success" %></th>  
  </tr>
</table>


<table class="table">
  <tr>
    <th>商品ID</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
  </tr>
  
<% @cart_items.each do |cart_item| %>
<% @total = @total + cart_item.subtotal %>
  <tr>
    <td><%= cart_item.name %></td>
    <td><%= cart_item.price %></td>
    <td><%= cart_item.quantity %></td>
    <td><%= @total  %></td>
    <td><%= @order_items.making_status %></td>
    <th><%= f.submit "更新",class: "btn btn-success" %></th>
  </tr>
<% end %>
</table>

<table class="table">
  <tr>
    <th>商品合計</th>
    <td><%= @totals %>円<td>
  </tr>

  <tr>
    <th>送料</th>
    <td><%= @shipping_fee %>円<td>
  </tr>
  
  <tr>
    <th>請求金額合計</th>
    <td><%= @totals + @shipping_fee %>円<td>
  </tr>
</table>
