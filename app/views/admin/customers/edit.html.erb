<div class="container">
  <div class="row mt-4">
    <div class="col-sm-8 px-sm-0 offset-sm-1">

    <h4 class="table-secondary d-inline-flex pl-4 pr-4 mt-4 mb-3 ml-2"><%= @customer.full_name %>さんの会員詳細</h4>

    <%= form_with model: @customer, url:admin_customer_path(@customer), local:true do |f| %>
      <table class="table table-borderless">
            <tr>
              <th class="text-left">会員ID</th>
              <th><%= @customer.id %></th>
            </tr>

            <tr>
              <th class="text-left">氏名</th>
              <th><%= f.text_field :last_name %></th>
              <th><%= f.text_field :first_name %></th>
            </tr>


            <tr>
              <th class="text-left">フリガナ</th>
              <th><%= f.text_field :last_name_kana %></th>
              <th><%= f.text_field :first_name_kana %></th>
            </tr>
            <tr>
              <th class="text-left">郵便番号</th>
              <th><%= f.text_field :post_code %></th>
            </tr>

            <tr>
              <th class="text-left">住所</th>
              <th><%= f.text_area :address, size: 40 %></th>
            </tr>

            <tr>
              <th class="text-left">電話番号</th>
              <th><%= f.text_field :phone_number %></th>
            </tr>

            <tr>
              <th class="text-left">メールアドレス</th>
              <th><%= f.text_field :email %></th>
            </tr>

            <tr>
              <th class="text-left">会員ステータス</th>
              <th>
              <%= f.radio_button :is_withdrawal, :false %>
              <%= f.label :is_withdrawal_false, "有効" %>
              <%= f.radio_button :is_withdrawal, :true %>
              <%= f.label :is_withdrawal_true, "退会" %>

              </th>
            </tr>

            <tr>
              <th></th>

　　　　　　　<th><%= f.submit "変更を保存", class: "btn btn-success" %></th>
             </tr>

        <% end %>
      </div>
    </div>