<div class="container">
  <div class="row">
    <h2>会員一覧</h2>

      <table class="table table-hover table-inverse">

        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>

       <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td></td>
            <td><%= link_to customer.name, admin_customer_path(customer.id) %></td>
            <td><%= customer.email %></td>
            <td><%= customer.is_withdrawal ? "有効" : "退会" %></td>
          </tr>
       </tbody>
      <% end %>
      </table>
    </div>
  </div>